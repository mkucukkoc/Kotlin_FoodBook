<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="secilenBesin"
            type="com.example.foodbook.model.Food" />
    </data>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.FoodDetailsFragment">
        <ImageView
            android:id="@+id/foodImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:scaleType="fitCenter"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            android:downloadImage="@{secilenBesin.besinGorsel}"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodDetailsName"
            android:layout_below="@id/foodImage"
            android:text="@{secilenBesin.besinisim}"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_margin="5dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodDetailsCalory"
            android:layout_below="@id/foodDetailsName"
            android:text="@{secilenBesin.besinKalori}"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodDetailsCarbonhidrat"
            android:layout_below="@id/foodDetailsCalory"
            android:text="@{secilenBesin.besinKarbonhidrat}"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodDetailsProtein"
            android:layout_below="@id/foodDetailsCarbonhidrat"
            android:text="@{secilenBesin.besinProtein}"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/foodDetailsYag"
            android:layout_below="@id/foodDetailsProtein"
            android:text="@{secilenBesin.besinYag}"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            ></TextView>

    </RelativeLayout>
</layout>